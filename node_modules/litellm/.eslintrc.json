{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended-type-checked",
    "plugin:@typescript-eslint/stylistic-type-checked",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "indent": ["error", 2],
    "space-before-function-paren": "off",
    "semi": "off",
    "no-console": "error"
  },
  "parserOptions": {
    "project": ["./tsconfig.json"]
  }
}
